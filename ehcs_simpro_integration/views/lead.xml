<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="think_plc_inheri_field_crm_lead" model="ir.ui.view">
        <field name="name">crm.lead.form.view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="before">
                <field name="site_id" invisible='1'/>
                <field name="plc_site_id"/>
                <field name="lead_creat_date"/>
                <field name="follow_up_date"/>
            </field>
            <field name="user_id" position="attributes">
                <attribute name='string'>Lead Generated By</attribute>
            </field>

            <field name="lost_reason_id" position="before">
                <field name="project_type_id"/>
                <field name="generated_by" options="{'no_create': True}"/>
                <field name="x_simpro_id"/>
            </field>
            <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position='attributes'>
                <attribute name='string'>Customer</attribute>
                <attribute name='domain'>[('is_customer', '!=', False)]</attribute>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position='attributes'>
                <attribute name='string'>Customer</attribute>
                <attribute name='domain'>[('is_customer', '!=', False)]</attribute>
            </xpath>
            <!-- <field name='partner_id' position='attributes'>
                <attribute name='string'>Customer</attribute>
                <attribute name='domain'>[('is_customer', '!=', False)]</attribute>
            </field> -->
            <xpath expr='//page[@name="internal_notes"]' position='replace'>
                <page string='Notes / Description'>
                    <group name="description" string="Description">
                        <field colspan="2" name="description" nolabel="1" placeholder="Description "/>
                    </group>
                    <group name="note" string="Notes">
                        <field colspan="2" name="note" nolabel="1" placeholder="Note"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
