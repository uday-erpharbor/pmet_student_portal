<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="ehcs_product_manufacturer_form_view" model="ir.ui.view">
		<field name="name">product.manufacturer.form</field>
		<field name="model">product.manufacturer</field>
		<field name="arch" type="xml">
			<form name="sports">
				<sheet>
					<group col='2'>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>	
			</form>
		</field>
	</record>

	<record id="ehcs_plc_product_manufacturer_view" model="ir.ui.view">
        <field name="name">product.manufacturer.list</field>
        <field name="model">product.manufacturer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

	<record id="action_plc_manufacturer" model="ir.actions.act_window">
		<field name="name">Manufacturer</field>
		<field name="res_model">product.manufacturer</field>
		<field name="view_mode">list,form</field>
	</record>

	<menuitem 
		id="menu_plc_manufacturer" 
		name="Manufacturer" 
		action="action_plc_manufacturer" 
        sequence="31" 
        parent='sale.prod_config_main'
        />

</odoo>
