<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wiz_import_option_view" model="ir.ui.view">
        <field name="name">wiz.import.option.view</field>
        <field name="model">wiz.import.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="4">
                        <field name="file_name" filename="name"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="import_data" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
